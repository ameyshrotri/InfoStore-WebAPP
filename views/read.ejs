<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full text-white p-10">
      <div class="nav mb-10">
        <a href="/" class="text-blue-500">Back To Home</a>
      </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if(users.length > 0 ){ %> <% users.forEach(function(user) { %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 bg-zinc-700 rounded-lg overflow-hidden">
            <img class="w-full h-full object-cover" src="<%= user.image %>" />
          </div>
          <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-10">
            <a href="/edit/<%= user._id %> " class="text-zinc-200">Edit User</a>
            <a href="/delete/<%= user._id %>" class="text-red-500"
              >Delete User</a
            >
          </div>
        </div>
        <% }); %> <% } else{ %>
        <h3 class="text-zinc-500">No users yet</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
